# 应用配置
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=OpenAero
NEXT_PUBLIC_APP_VERSION=1.0.0

# 国际化配置
NEXT_PUBLIC_DEFAULT_LOCALE=zh-CN
NEXT_PUBLIC_SUPPORTED_LOCALES=zh-CN,en-US
NEXT_PUBLIC_FALLBACK_LOCALE=zh-CN
NEXT_PUBLIC_ENABLE_BROWSER_DETECTION=true
NEXT_PUBLIC_ENABLE_SERVER_DETECTION=true
NEXT_PUBLIC_TRANSLATION_CACHE_TTL=3600
NEXT_PUBLIC_ENABLE_TRANSLATION_VALIDATION=true
NEXT_PUBLIC_DEBUG_I18N=false

# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/openaero"
DIRECT_URL="postgresql://username:password@localhost:5432/openaero"

# Redis配置
REDIS_URL="redis://localhost:6379"

# API配置
NEXT_PUBLIC_API_URL=/api
API_TIMEOUT=10000

# 监控配置
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=openaero
SENTRY_PROJECT=openaero-web

# 第三方服务
GOOGLE_ANALYTICS_ID=your-ga-id
GOOGLE_SITE_VERIFICATION=your-google-verification-code
YANDEX_VERIFICATION=your-yandex-verification-code

# 功能开关
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_ENABLE_DARK_MODE=false

# 开发配置
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# 环境优化配置
NEXT_PUBLIC_DEBUG_ENV=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_LOG_LEVEL=info
