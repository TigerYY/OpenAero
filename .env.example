# ============================================
# OpenAero 环境变量配置模板
# ============================================
# 复制此文件为 .env.local 并填入实际值

# --------------------------------------------
# Supabase 配置
# --------------------------------------------
# 从 Supabase 项目设置中获取
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_PROJECT_ID=your-project-id

# --------------------------------------------
# 数据库连接 (Supabase PostgreSQL)
# --------------------------------------------
# Session 模式 - 用于查询 (推荐用于 Prisma 查询)
DATABASE_URL="postgresql://postgres.[project-id]:[password]@aws-[region].pooler.supabase.com:5432/postgres"

# Transaction 模式 - 用于 Prisma Migrate
DIRECT_URL="postgresql://postgres.[project-id]:[password]@aws-[region].pooler.supabase.com:6543/postgres"

# --------------------------------------------
# NextAuth 配置 (可选，如需兼容旧系统)
# --------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# --------------------------------------------
# 功能标志配置
# --------------------------------------------
# Supabase Auth 相关
FEATURE_SUPABASE_AUTH=true
FEATURE_OAUTH_PROVIDERS=false
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PASSWORD_RESET=true

# 开发模式
USE_MOCK_DATA=false
FEATURE_MIGRATION_MODE=false

# 调试选项
DEBUG_AUTH=false

# --------------------------------------------
# SMTP 邮件服务配置
# --------------------------------------------
# 用于邮箱验证和密码重置
# 示例使用腾讯企业邮箱
SMTP_HOST=smtp.exmail.qq.com
SMTP_PORT=465
SMTP_USER=support@yourdomain.com
SMTP_PASS=your-smtp-password
SMTP_SENDER_EMAIL=support@yourdomain.com
SMTP_SENDER_NAME=OpenAero
SMTP_SECURE=true
ADMIN_EMAIL=admin@yourdomain.com

# --------------------------------------------
# OAuth 提供商配置 (可选)
# --------------------------------------------
# Google OAuth (从 Google Cloud Console 获取)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (从 GitHub Developer Settings 获取)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# --------------------------------------------
# 应用配置
# --------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# --------------------------------------------
# 支付配置 (可选)
# --------------------------------------------
# 支付宝
ALIPAY_APP_ID=
ALIPAY_PRIVATE_KEY=
ALIPAY_PUBLIC_KEY=

# 微信支付
WECHAT_APP_ID=
WECHAT_MCH_ID=
WECHAT_API_KEY=

# --------------------------------------------
# 文件存储配置 (可选)
# --------------------------------------------
# 如使用外部存储服务
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# --------------------------------------------
# 日志和监控 (可选)
# --------------------------------------------
# Sentry
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Google Analytics
NEXT_PUBLIC_GA_ID=

# --------------------------------------------
# 其他配置
# --------------------------------------------
# API 速率限制
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Session 配置
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=2592000
