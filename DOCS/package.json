{
  "name": "openaero-docs",
  "version": "1.0.0",
  "description": "Documentation automation scripts for OpenAero platform",
  "private": true,
  "scripts": {
    "validate": "node scripts/prd-validator.js",
    "validate:all": "npm run validate && npm run check:links && npm run check:format",
    "check:links": "node scripts/link-checker.js",
    "check:format": "node scripts/format-checker.js",
    "update:status": "node scripts/status-updater.js",
    "report:status": "node scripts/status-reporter.js",
    "review:create": "node scripts/review-helper.js create",
    "review:check": "node scripts/review-helper.js check",
    "ci:integrate": "node scripts/ci-integration.js",
    "milestone:track": "node scripts/milestone-tracker.js",
    "progress:report": "node scripts/progress-reporter.js",
    "stakeholder:report": "node scripts/stakeholder-reporter.js",
    "test:docs": "node scripts/doc-tester.js",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --fix",
    "linkcheck": "linkchecker --config .linkcheckrc .",
    "format:check": "prettier --check '**/*.md'",
    "format:fix": "prettier --write '**/*.md'"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "marked": "^9.1.6",
    "yaml": "^2.3.4",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "inquirer": "^8.2.6",
    "commander": "^11.1.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.37.0",
    "prettier": "^3.1.1",
    "linkchecker": "^0.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "documentation",
    "prd",
    "automation",
    "validation",
    "openaero"
  ],
  "author": "OpenAero Development Team",
  "license": "MIT"
}
