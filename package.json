{
  "name": "openaero-web",
  "version": "1.0.0",
  "private": true,
  "description": "开元空御 - 社区驱动的开放式无人机解决方案平台",
  "scripts": {
    "clean-ports": "node scripts/clean-ports.js",
    "dev": "npm run clean-ports && next dev",
    "dev:clean": "npm run clean-ports && next dev",
    "dev:port": "npm run clean-ports && next dev -p",
    "dev:3000": "npm run clean-ports && next dev -p 3000",
    "dev:3001": "npm run clean-ports && next dev -p 3001",
    "dev:3002": "npm run clean-ports && next dev -p 3002",
    "build": "next build",
    "start": "next start",
    "start:3000": "next start -p 3000",
    "start:3001": "next start -p 3001",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "quality:check": "npm run lint && npm run type-check && npm run test:coverage",
    "check-dependencies": "npm audit --audit-level moderate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:init": "node scripts/init-db.js",
    "db:reset": "prisma migrate reset --force && npm run db:init",
    "db:seed": "npm run db:init",
    "prepare": "husky install",
    "analyze": "ANALYZE=true npm run build",
    "clean": "rm -rf .next node_modules/.cache",
    "fresh": "npm run clean && npm install && npm run build",
    "docker:build": "docker build -t openaero-web .",
    "docker:run": "docker run -p 3000:3000 openaero-web",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:dev": "./scripts/deploy.sh dev",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:prod": "./scripts/deploy.sh production",
    "k8s:apply": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:status": "kubectl get pods -n openaero"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@prisma/client": "^5.8.1",
    "@sentry/nextjs": "^10.20.0",
    "@sentry/profiling-node": "^10.20.0",
    "@tailwindcss/forms": "^0.5.10",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.16",
    "next": "14.1.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "web-vitals": "^5.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prisma": "^5.8.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
