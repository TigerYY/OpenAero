{
  "name": "openaero-web",
  "version": "1.0.0",
  "private": true,
  "description": "开元空御 - 社区驱动的开放式无人机解决方案平台",
  "scripts": {
    "dev": "node scripts/start-dev.js",
    "dev:3000": "PORT=3000 node scripts/start-dev.js",
    "dev:3001": "PORT=3001 node scripts/start-dev.js",
    "build": "next build",
    "start": "next start",
    "start:3000": "next start -p 3000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:routes": "eslint . --config .eslintrc.custom.js --ext .js,.jsx,.ts,.tsx --rule 'no-hardcoded-routes: error'",
    "check:routes": "npx tsx scripts/diagnose-routes.ts",
    "check:routes:ci": "./scripts/check-routes-ci.sh",
    "fix:routes": "npx tsx scripts/fix-routes-auto.ts",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:enhanced": "jest --config jest.config.enhanced.js",
    "test:coverage:enhanced": "jest --config jest.config.enhanced.js --coverage",
    "test:watch:enhanced": "jest --config jest.config.enhanced.js --watch",
    "test:ci": "jest --config jest.config.enhanced.js --coverage --watchAll=false --passWithNoTests",
    "clean-ports": "node scripts/clean-ports.js",
    "clean": "rm -rf .next out dist node_modules/.cache",
    "fresh": "npm run clean && npm install",
    "env:validate": "node scripts/validate-env.js",
    "config:validate": "npm run env:validate",
    "quality:check": "npm run env:validate && npm run lint && npm run type-check && npm run test:coverage",
    "quality:check:enhanced": "npm run lint:enhanced && npm run format:check:enhanced && npm run type-check:enhanced && npm run test:coverage",
    "lint:enhanced": "eslint . --config .eslintrc.enhanced.json --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:fix:enhanced": "eslint . --config .eslintrc.enhanced.json --ext .js,.jsx,.ts,.tsx --fix",
    "format:check:enhanced": "prettier --config .prettierrc.enhanced --check .",
    "format:enhanced": "prettier --config .prettierrc.enhanced --write .",
    "type-check:enhanced": "tsc --project tsconfig.enhanced.json --noEmit",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run security:audit && npx depcheck",
    "bundle:analyze": "npx bundlesize",
    "check-dependencies": "npm audit --audit-level moderate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:init": "node scripts/init-db.js",
    "db:rebuild": "node scripts/rebuild-database.js",
    "db:create-missing": "node scripts/create-missing-tables.js",
    "db:sync-profiles": "tsx scripts/sync-user-profiles.ts",
    "bom:check": "tsx scripts/check-bom-migration-status.ts",
    "bom:migrate": "tsx scripts/migrate-bom-to-table.ts",
    "bom:migrate:dry-run": "tsx scripts/migrate-bom-to-table.ts --dry-run",
    "bom:migrate:rollback": "tsx scripts/migrate-bom-to-table.ts --rollback",
    "bom:validate": "tsx scripts/validate-bom-data-integrity.ts",
    "bom:validate:report": "tsx scripts/validate-bom-data-integrity.ts --generate-report",
    "db:rls": "node scripts/apply-rls-policies.js",
    "db:bom-enhancement": "node scripts/apply-bom-enhancement-migration.js",
    "test:bom-api": "node scripts/test-bom-api.js",
    "test:create-solution": "node scripts/create-test-solution-and-bom.js",
    "db:reset": "prisma migrate reset --force && npm run db:init",
    "db:seed": "npm run db:init",
    "prepare": "husky install",
    "analyze": "ANALYZE=true npm run build",
    "docker:build": "docker build -t openaero-web .",
    "docker:run": "docker run -p 3000:3000 openaero-web",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:dev": "./scripts/deploy.sh dev",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:prod": "./scripts/deploy.sh production",
    "k8s:apply": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:status": "kubectl get pods -n openaero",
    "routes:check": "node scripts/check-hardcoded-routes.js",
    "routes:fix": "node scripts/fix-hardcoded-routes.js",
    "mcp:setup": "node scripts/setup-supabase-mcp.js",
    "mcp:test": "npx -y @supabase/mcp-server-supabase@latest --version"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.0.18",
    "@prisma/client": "5.22.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@sentry/nextjs": "^10.20.0",
    "@sentry/profiling-node": "^10.20.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.81.0",
    "@tailwindcss/forms": "^0.5.10",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jszip": "^3.4.0",
    "@types/mime-types": "^3.0.1",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.3",
    "chalk": "^5.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^10.16.16",
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "jszip": "^3.10.1",
    "lucide-react": "^0.548.0",
    "mime-types": "^3.0.1",
    "moment": "^2.30.1",
    "multer": "^2.0.2",
    "next": "14.1.0",
    "next-intl": "^4.4.0",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.10",
    "prom-client": "^15.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.4.1",
    "sharp": "^0.34.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.0",
    "uuid": "^13.0.0",
    "web-push": "^3.6.7",
    "web-vitals": "^5.1.0",
    "xlsx": "^0.18.5",
    "yaml": "^2.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "node-mocks-http": "^1.17.2",
    "pg": "^8.16.3",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prisma": "^5.8.1",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
